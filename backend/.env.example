# Database
DATABASE_URL=postgresql://rdv_user:rdv_password@localhost:5432/rdv_db
# Connection pool settings (for production)
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=10

# Redis
REDIS_URL=redis://localhost:6379
# Disable caching (for debugging)
# DISABLE_CACHE=true

# Auth - SECURITY: Both secrets required in production, min 32 chars each
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-required
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars-required

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Notifications - Email (Resend)
RESEND_API_KEY=re_...
EMAIL_FROM=alerte@rdvpriority.fr

# Notifications - SMS (Twilio)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+33...

# Notifications - Telegram
TELEGRAM_BOT_TOKEN=...

# Notifications - WhatsApp Cloud API (Meta)
# Setup: https://developers.facebook.com → Create App → Add WhatsApp
# 1000 free conversations/month, then ~$0.03/conversation
WHATSAPP_PHONE_ID=...
WHATSAPP_ACCESS_TOKEN=...

# Firebase (FCM)
FIREBASE_PROJECT_ID=...
FIREBASE_CLIENT_EMAIL=...
FIREBASE_PRIVATE_KEY=...

# =====================================================
# ANTI-BOT INFRASTRUCTURE (Required for production)
# =====================================================

# Proxy Providers (choose one or more)
# Option 1: ScraperAPI (recommended - handles proxies + CAPTCHA)
# Get key at: https://www.scraperapi.com/
SCRAPERAPI_KEY=

# Option 2: Bright Data (enterprise-grade residential proxies)
# Get credentials at: https://brightdata.com/
BRIGHTDATA_USERNAME=
BRIGHTDATA_PASSWORD=
BRIGHTDATA_HOST=brd.superproxy.io
BRIGHTDATA_PORT=22225

# Option 3: Custom proxy list (format: host:port:user:pass,host:port:user:pass)
PROXY_LIST=

# CAPTCHA Solving Providers (choose one)
# Option 1: 2Captcha - https://2captcha.com/
TWOCAPTCHA_API_KEY=

# Option 2: Anti-Captcha - https://anti-captcha.com/
ANTICAPTCHA_API_KEY=

# Deduplication settings
# How long to remember sent notifications (in seconds, default: 3600 = 1 hour)
DEDUP_TTL_SECONDS=3600

# =====================================================
# ERROR MONITORING (Sentry)
# =====================================================
# Get DSN at: https://sentry.io/
SENTRY_DSN=
SENTRY_RELEASE=

# =====================================================

# App
FRONTEND_URL=http://localhost:3000
PORT=4000
NODE_ENV=development

# =====================================================
# BOOTSTRAP MODE (€15-20/month budget)
# =====================================================
# Enable for budget-constrained deployments
BOOTSTRAP_MODE=false

# Your Telegram chat ID for manual CAPTCHA alerts
# Get it by messaging @userinfobot on Telegram
ADMIN_TELEGRAM_CHAT_ID=
